<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_other"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sti.carbonfootprintscalculator.widget.TextviewGillSans
            style="@style/textWhiteOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Carbon Emission:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary" />

        <com.sti.carbonfootprintscalculator.widget.TextviewGillSans
            android:id="@+id/tvResult"
            style="@style/textWhiteOverlaySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.sti.carbonfootprintscalculator.widget.TextviewGillSans
            style="@style/textWhiteOverlaySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="How to help and reduce carbon dioxide emission:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <com.sti.carbonfootprintscalculator.widget.TextviewGillSans
            android:id="@+id/tvHow"
            style="@style/textWhiteOverlaySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />
    </LinearLayout>

</ScrollView>